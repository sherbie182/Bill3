<h1>Bills#new</h1>
<%= form_for :bill, url:bills_path do |f| %>
  <p>
    <%= f.label :'Paid by' %><br>
    <%= f.text_field :whopaid %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.label :'Total amount' %><br>
    <%= f.text_area :total %>
  </p>

  <p>
    <%= f.label :'Shared with' %><br>
    <%= f.text_area :sharepersons %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
